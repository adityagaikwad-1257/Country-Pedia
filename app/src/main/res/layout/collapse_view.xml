<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginHorizontal="15dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:background="@drawable/collapse_view_bg"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:contentDescription="@string/flag_image"
            android:id="@+id/flag_image_view_collapse"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            tools:src="@mipmap/ic_launcher"
            android:layout_alignParentStart="true"
            android:transitionName="flag"
            />

        <TextView
            android:id="@+id/country_name_collapse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/flag_image_view_collapse"
            android:layout_marginStart="15dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/black"
            android:transitionName="name"
            tools:text="UNITED ARAB EMIRATES" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>